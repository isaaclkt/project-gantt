# ==================================================
# ProjectFlow Gantt - Environment Variables
# Copy this file to .env and configure your values
# ==================================================

# -------------------------
# Flask Configuration
# -------------------------
FLASK_APP=run.py
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
PORT=5000

# SECURITY: Generate secure keys for production with:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# -------------------------
# Database Configuration
# -------------------------
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=projectflow_gantt

# Alternative connection string (optional)
# DATABASE_URL=mysql+pymysql://root:your_password@localhost:3306/projectflow_gantt

# -------------------------
# Redis (Production recommended)
# -------------------------
# REDIS_URL=redis://localhost:6379/0

# -------------------------
# CORS Configuration
# -------------------------
# Next.js may use ports 3000-3003 if 3000 is occupied
# In production, only allow your actual domain
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://127.0.0.1:3000,http://127.0.0.1:3001

# -------------------------
# Rate Limiting (optional)
# -------------------------
# RATELIMIT_DEFAULT=200 per minute
